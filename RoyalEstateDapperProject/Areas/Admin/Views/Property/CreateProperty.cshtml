@model CreatePropertyDto
@{
    ViewData["Title"] = "CreateProperty";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<script src="https://cdn.tiny.cloud/1/s4c5vnb6scu4v8ds2nwfbqdpl37i0p42pug9wd48yb07oguo/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
<script>
    tinymce.init({
        selector: 'textarea#tiny',
        width:1200,
        height:300,
                        plugins: [
            'a11ychecker', 'advlist', 'advcode', 'advtable', 'autolink', 'checklist', 'markdown',
            'lists', 'link', 'image', 'charmap', 'preview', 'anchor', 'searchreplace', 'visualblocks',
            'powerpaste', 'fullscreen', 'formatpainter', 'insertdatetime', 'media', 'table', 'help', 'wordcount'
        ],
        toolbar: 'undo redo | a11ycheck casechange blocks | bold italic backcolor | alignleft aligncenter alignright alignjustify |' +
            'bullist numlist checklist outdent indent | removeformat | code table help'
    })
</script>
<div class="col-md-12 mt-5">
    <div class="white_shd full margin_bottom_30">
        <div class="full graph_head">
            <div class="heading1 margin_0">
                <h2>Yeni İlan Girişi</h2>
            </div>
        </div>
        <div class="table_section padding_infor_info">
            <div class="table-responsive-sm">
                <form method="post">
                    <div class="form-group">
                        <label>İlan Başlığı</label>
                        <input type="text" class="form-control" name="Title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Metre Kare</label>
                        <input type="text" class="form-control" name="Sqft" />
                        <span asp-validation-for="Sqft" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Yatak Sayısı</label>
                        <input type="text" class="form-control" name="Bedroom" />
                        <span asp-validation-for="Bedroom" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Banyo Sayısı</label>
                        <input type="text" class="form-control" name="Bathroom" />
                        <span asp-validation-for="Bathroom" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>İlan Açıklaması</label>
                        <textarea id="tiny" name="Description" class="form-control" cols="5" rows="5"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Video Linki</label>
                        <input type="text" class="form-control" name="VideoUrl" />
                        <span asp-validation-for="VideoUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Fiyat</label>
                        <input type="text" class="form-control" name="Price" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Kategori</label>
                        @Html.DropDownListFor(x=>x.CategoryId,(SelectList)ViewBag.categories,"Kategori Seçiniz",new {@class="form-control"})
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Lokasyon</label>
                        @Html.DropDownListFor(x => x.LocationId, (SelectList)ViewBag.locations, "Lokasyon Seçiniz", new { @class = "form-control" })
                        <span asp-validation-for="LocationId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Görsel 1</label>
                        <input type="text" class="form-control" name="ImageUrl1" />
                        <span asp-validation-for="ImageUrl1" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Görsel 2</label>
                        <input type="text" class="form-control" name="ImageUrl2" />
                        <span asp-validation-for="ImageUrl2" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Görsel 3</label>
                        <input type="text" class="form-control" name="ImageUrl3" />
                        <span asp-validation-for="ImageUrl3" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label>Adres</label>
                        <input type="text" class="form-control" name="Address" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Fiyat</label>
                        <select class="form-control" name="Status">
                            <option value="">İlan Durumu</option>
                            <option value="Satılık">Satılık</option>
                            <option value="Kiralık">Kiralık</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-success">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>
