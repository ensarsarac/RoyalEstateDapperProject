@model GetByIdAgentDto
@{
    ViewData["Title"] = "UpdateAgent";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12 mt-5">
    <div class="white_shd full margin_bottom_30">
        <div class="full graph_head">
            <div class="heading1 margin_0">
                <h2>Yeni Emlakçı Girişi</h2>
            </div>
        </div>
        <div class="table_section padding_infor_info">
            <div class="table-responsive-sm">
                <form method="post">
                    <input type="hidden" asp-for="@Model.AgentId" />
                    <div class="form-group">
                        <label>Ad Soyad</label>
                        <input type="text" class="form-control" asp-for="@Model.NameSurname" />
                        <span asp-validation-for="NameSurname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Görsel Link</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        <textarea class="form-control" asp-for="@Model.Description" cols="10" rows="10">@Model.Description</textarea>
                    </div>
                    <button type="submit" class="btn btn-success">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>
